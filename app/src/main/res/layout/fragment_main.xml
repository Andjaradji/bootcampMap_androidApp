<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rds.andjaradji.bootcampmap.Fragments.MainFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="6">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_search"
                    android:background="@android:color/transparent"/>

                <EditText
                    android:id="@+id/postalCodeInputID"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:hint="@string/postal_code_goes_here"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_weight="4"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mic"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rds.andjaradji.bootcampmap.Activities.MapsActivity" />

        <FrameLayout
            android:id="@+id/bootcampLocLisContainerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</FrameLayout>
